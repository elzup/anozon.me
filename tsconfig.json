{
	"main": "dist/index",
	"compilerOptions": {
		"target": "es5",
		"lib": ["es7", "dom"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"rootDirs": ["src"],
		"typeRoots": ["src/types"]
	},
	"include": ["src/**/*"]
}

---
import type { IconProp } from '@fortawesome/fontawesome-svg-core'
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome'

export interface Props {
	title: string
	href: string
	icon: IconProp
}
const { title, href, icon } = Astro.props
---

<a title={title} href={href} target="_blank" rel="noopener noreferrer">
	<div class="box">
		<FontAwesomeIcon icon={icon} />
	</div>
</a>

<style>
	@keyframes spin {
		50% {
			background: #444;
			transform: rotateZ(-10deg);
		}

		100% {
			background: black;
			transform: rotateZ(0deg);
		}
	}

	a {
		position: relative;
		height: 45px;
		width: 45px;
		border-radius: 5px;
		background: black;
		font-size: 30px;
		line-height: 47px;
		margin: 5px;
		&:hover {
			animation: spin 0.3s ease 0s forwards;
		}
	}

	.box {
		position: absolute;
		width: 100%;
		height: 100%;
		text-align: center;
		color: white;
	}
</style>

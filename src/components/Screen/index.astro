---
export interface Props {
	id: string
	title: string
	description: string
}
const { props } = Astro
---

<div id={props.id}>
	<div class="header">
		<h2>
			{props.title}: {props.description}
		</h2>
	</div>
	<slot />
</div>

<style>
	:root > div {
		margin: 5vh auto 0;
		padding: 10px;
		width: 650px;
		@media (max-width: 700px) {
			width: 95%;
		}
	}

	h2 {
		text-align: center;
		border-bottom: solid 1px gray;
		width: 100%;
		&:before {
			content: '-';
		}
		&:after {
			content: '-';
		}
	}

	.hdear {
		display: flex;
		justify-content: center;
	}
</style>

---
import Footer from '../../components/Footer/index.astro'
import HobbyScreen from '../../components/HobbyScreen/index.astro'
import ProfileScreen from '../../components/ProfileScreen/index.astro'
import TopScreen from '../../components/TopScreen/index.astro'
import WorkScreen from '../../components/WorkScreen/index.astro'
---

<div>
	<TopScreen />
	<div class="screen">
		<ProfileScreen />
		<WorkScreen />
		<HobbyScreen />
		<Footer />
	</div>
</div>

<style>
	:root > div {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		min-width: 100vmin;
		min-height: 100vmin;
	}

	.screen {
		position: absolute;
		z-index: -2;
		left: 0;
		top: 100%;
		width: 100%;
		background: linear-gradient(white 0%, #e6e6e6 100%);
	}
</style>
